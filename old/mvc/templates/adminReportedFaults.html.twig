{#--------------------------------#}

{% extends "_layout.html.twig" %}

{#--------------------------------#}

{% block title %}Customer Care Map{% endblock %}

{#--------------------------------#}

{% block style %}
    <style>
        @import "css/bootstrap.min.css";
        @import "css/custom.css";
    </style>
{% endblock %}

{% block main %}
    <main>
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="./admin">Field Engineers</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
                    <li><a href="./adminSelectRegion">Select Region</a> <span class="glyphicon glyphicon-circle-arrow-right"></span></li>
                    <li class="active">Reported Faults</li>
                </ol>

                <h4>{{ totalRecords }} Fault Reports Currently Open for Region: <span class="detail">{{ teamRegion }}</span> </h4>

                <nav id="linksContainer">
                    <ul class="pagination pagination-sm">
                        {{ outputHTML | raw }}
                    </ul>
                </nav>
                <div id="reportedFaultsList">
                    <table class="table table-hover">
                        {% for reportedFault in reportedFaultsArr %}
                            <tr>
                                <td>
                                    <a href="./adminUpdateFault?faultId={{ reportedFault.faultId }} ">Fault Id  {{ reportedFault.faultId }} </a> - Status:<span class="detail">{{ reportedFault.faultStatus }}</span> - Raised: <span class="detail">{{ reportedFault.faultDateFrom | slice(0,10) }} </span>- County:<span class="detail">{{ reportedFault.faultCounty }}</span>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>

            </div>

        </div>
    </main>
{% endblock %}

{% block script %}
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="js/bootStrap/bootstrap.min.js"></script>
{% endblock %}